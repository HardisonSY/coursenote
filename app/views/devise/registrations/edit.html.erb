<div class="bs-docs-section">
  <div class="row">
    <div class="col-lg-12">
      <div class="page-header">
        <h1 id="forms">更改密碼</h1>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-7">
      <div class="well bs-component">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :patch, class: "form-horizontal" }) do |f| %>
          <%= devise_error_messages! %>

          <div class="form-group">
            <%= f.label :current_password, "舊密碼", class: 'col-lg-2 control-label' %>
              <div class="col-lg-10">
                <%= f.password_field :current_password, autofocus: true, autocomplete: "off", class: 'form-control' %>
              </div>
          </div>
          <div class="form-group">
            <%= f.label :password, "新密碼", class: 'col-lg-2 control-label' %>
              <div class="col-lg-10">
                <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
              </div>
          </div>
          <div class="form-group">
            <%= f.label :password_confirmation, "確認新密碼", class: 'col-lg-2 control-label' %>
              <div class="col-lg-10">
                <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
              </div>
          </div>
          <div class="form-group">
            <div class="col-lg-10 col-lg-offset-2">
              <%= f.submit "送出", class: "btn btn-primary" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>