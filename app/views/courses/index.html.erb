                    <th>開課系級</th>
                    <th>追蹤課程</th>
                  </tr>
                </thead>
                <tbody>
                  <% course.entries.each do |entry| %>
                  <tr>
                    <td><%= entry.code %></td>
                    <td><%= entry.time %></td>
                    <td><%= entry.credit %></td>
                    <td><%= entry.department %></td>
                    <td><a class="btn btn-sm btn-default">追蹤課程</a></td>
                  </tr>
                  <% end %>
